<%- include('partials/header') %>

<div class="container">
    <%- include('partials/sidebar') %>

    <div class="content">
        <h2>Gesti√≥n de Usuarios</h2>

        <table>
            <tr>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Estado</th>
            </tr>

            <% usuarios.forEach(usuario => { %>
                <tr>
                    <td><%= usuario.nombre %></td>
                    <td><%= usuario.rol %></td>
                    <td>
                        <span class="status <%= usuario.estado === 'Activo' ? 'active-status' : 'inactive-status' %>">
                            <%= usuario.estado %>
                        </span>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
</div>

<%- include('partials/footer') %>